@{
    ViewData["Title"] = "Home";
}

<!-- hero header: i replaced the scaffold “Welcome” with a proper banner -->
<div class="py-5 text-center bg-light rounded-3 mb-4 shadow-sm">
  <h1 class="display-4 fw-bold text-dark m-0">EasyGames</h1>
  <p class="text-secondary mb-0">Your one-stop shop for games, books &amp; toys</p>
</div>

<!-- optional: highlight categories / CTA -->
<div class="row g-4">
  <div class="col-md-4">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-body text-center">
        <h5 class="card-title">Browse Catalog</h5>
        <p class="text-muted">See our full range of games, books and toys.</p>
        <a href="/Catalog" class="btn btn-primary">Shop Now</a>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-body text-center">
        <h5 class="card-title">Your Cart</h5>
        <p class="text-muted">View, update, and checkout your items.</p>
        <a href="/Cart" class="btn btn-outline-primary">Go to Cart</a>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-body text-center">
        <h5 class="card-title">Manage Stock</h5>
        <p class="text-muted">Owner-only area for inventory management.</p>
        <a href="/Stock" class="btn btn-outline-secondary">Stock Console</a>
      </div>
    </div>
  </div>
</div>
