@model EasyGames.Models.StockItem
@{
    ViewData["Title"] = Model.Name;
}
<div class="row g-4">
  <div class="col-md-6">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
      <img src="@Model.ImagePath" class="img-fluid rounded shadow-sm detail-hero" alt="@Model.Name" />
    }
    else
    {
      <img src="https://picsum.photos/800/600?blur=1" class="img-fluid rounded shadow-sm detail-hero" alt="@Model.Name" />
    }
  </div>
  <div class="col-md-6">
    <h2 class="mb-1">@Model.Name</h2>
    <p><span class="badge text-bg-secondary">@Model.Category</span></p>
    <p class="display-6 price-tag">@Model.Price.ToString("C")</p>
    <p class="text-secondary">@Model.Description</p>

    <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex align-items-center gap-3">
      @Html.AntiForgeryToken()
      <input type="hidden" name="id" value="@Model.Id" />
      <button class="btn btn-primary btn-lg">Add to Cart</button>
      <a class="btn btn-outline-secondary" asp-controller="Catalog" asp-action="Index">Back</a>
    </form>
  </div>
</div>
